<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div style="text-align:center">
    
    <select id="guns" class="dd" style="height:40px;width:200px">
        <option value="handguns">Handguns</option>
        <option value="rifles">Assault Rifles</option>
        <option value="snipers">Sniper Rifles</option>
        <option value="machine guns">Machine Guns</option>
        <option value="shotguns">Shotguns</option>
    </select>

</div>

<div style="text-align:center">
    <button type="button" class="btn" style="height:80px;width:200px" onclick="sendView()">View Guns</button>
</div>

<div style="text-align:center">
    <button type="button" class="btn" style="height:80px;width:200px" onclick="sendQuiz()">Guns Quiz</button>
</div>

<script>

    function sendView() {
        var gun = document.getElementById("guns").value
        $.ajax({
            url: "/Main/GunView",
            type: "GET",
            data: {
                gun: gun
            },
            success: function (data) {
                window.location.href = "/Main/GunView?gun=" + gun
            },
        });
    }

    function sendQuiz() {
        var gun = document.getElementById("guns").value
        $.ajax({
            url: "/Main/GunQuiz",
            type: "GET",
            data: {
                gun: gun
            },
            success: function (data) {
                window.location.href = "/Main/GunQuiz?gun=" + gun
            },
        });
    }

</script>